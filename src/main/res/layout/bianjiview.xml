<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_marginTop="20dp"
        android:id="@+id/gouwu_head"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_marginLeft="-20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="购物车"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="18dp"
                    android:background="@drawable/dingwei"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/bianjiwancheng"
                    android:text="完成"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:background="@drawable/a9v"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000"
        android:layout_alignParentBottom="true"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/huanyingtiao"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:text="欢迎"
            android:textSize="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textColor="#F00"
            android:textSize="14dp"
            android:id="@+id/bianjiuserName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="用户...."/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#BEDEE6"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:groupIndicator="@null"
            android:id="@+id/bianjiExlv"
            ></ExpandableListView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/bianjikong"
            android:visibility="invisible"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/shopcar"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text="购物车是空的"
                    android:layout_marginLeft="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="逛逛秒杀"
                    android:background="@drawable/dengluanniu"
                    />
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="看看关注"
                    android:textColor="#F00"
                    android:background="@drawable/dengluanniu"
                    />
            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:layout_alignParentBottom="true"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:id="@+id/bianjiQuanXuan"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="14dp"
                android:text="删除"
                android:textColor="#FFF"
                android:background="#F00"
                android:layout_alignParentRight="true"
                android:id="@+id/bianjishanchu"
                />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
